{
  "name": "sofambl-sqlite-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prebuild": "mkdir -p dist uploads",
    "build": "node esbuild.config.js",
    "postbuild": "cp -r uploads dist/ 2>/dev/null || echo 'Uploads folder not found'",
    "start": "cd dist && node --trace-warnings server.js",
    "dev": "node server.js",
    "test": "node server.js"
  },
  "dependencies": {
    "express": "4.18.2",
    "cors": "2.8.5",
    "multer": "1.4.5-lts.1",
    "jsonwebtoken": "9.0.2",
    "bcryptjs": "2.4.3",
    "better-sqlite3": "11.0.0",
    "dotenv": "16.3.1"
  },
  "devDependencies": {
    "esbuild": "0.20.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}